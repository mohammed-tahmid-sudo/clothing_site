<?php
// Backend: count visits
$file = 'counter.txt';
if (!file_exists($file)) {
    file_put_contents($file, '0');
}
$count = (int)file_get_contents($file);
$count++;
file_put_contents($file, $count);
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Page Visit Counter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        .counter {
            font-size: 2em;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Welcome to My Page</h1>
    <p class="counter">This page has been visited <?php echo $count; ?> times.</p>
</body>
</html>
